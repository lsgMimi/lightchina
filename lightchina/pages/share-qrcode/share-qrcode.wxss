/* pages/share-qrcode/share-qrcode.wxss */
.share-qrcode-container {
  width: 100%;
  padding: 40rpx 68rpx 80rpx;
  box-sizing: border-box;
  background: url('http://dlszoss.oss-cn-shanghai.aliyuncs.com/images/bgs/home-bg.jpg');
  background-size: 100%;
}
.share-qrcode-img {
  width: 614rpx;
  height: 614rpx;
}
.share-qrcode-details {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 31rpx;
}
.share-qrcode-user {
  display: flex;
  align-items: center;
}
.share-qrcode-user>image {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-right: 23rpx;
}
.share-qrcode-name {
  font-size: 26rpx;
  color: #6A7785;
}
.share-qrcode-text {
  width: 330rpx;
  line-height: 45rpx;
  font-size: 30rpx;
  color: #6A7785;
  margin-top: 13rpx;
}
.share-qrcode-code>image {
  width: 252rpx;
  height: 254rpx;
}
.share-qrcode-button {
  width: 320rpx;
  height: 84rpx;
  text-align: center;
  line-height: 84rpx;
  margin: 105rpx auto 0rpx;
  background: #EE4C3B;
  border-radius: 100rpx;
  font-size: 37rpx;
  color: #FFFFFF;
}
.share-qrcode-button:hover {
  background: #d54738;
}
.share-qrcode-box {
  width: 100%;
  height: 100vh;
  padding-top: 40rpx;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  top: 0;
}
.share-qrcode-box>canvas {
  width: 274px;
  height: 394px;
  margin: 0 auto;
}
.save-image-button {
  width: 320rpx;
  text-align: center;
  height: 84rpx;
  margin: 84rpx auto 0;
  background: #FFFFFF;
  border-radius: 100rpx;
  line-height: 84rpx;
  font-size: 37rpx;
  color: #EE4C3B;
  position: relative;
  z-index: 2;
}
.qrcode-box-mask {
  width: 100%;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  background: rgba(0, 0, 0, .6);
}