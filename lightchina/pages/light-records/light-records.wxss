/* pages/light-records/light-records.wxss */
page {
  background: url('http://dlszoss.oss-cn-shanghai.aliyuncs.com/images/bgs/home-bg.jpg');
  background-size: 100%;
  min-height: 100vh;
}

.light-records-container {
  height: 100vh;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
}

.light-records-province {
  width: 192rpx;
  min-height: 100vh;
  border-right: 2rpx solid #d3d3d3;
}

.light-records-city {
  width: calc(100vw - 192rpx);
  flex: 1;
}

.light-records-content {
  width: 100%;
  padding-left: 32rpx;
  box-sizing: border-box;
}

.city-item {
  width: 100%;
  height: 110rpx;
  font-size: 36rpx;
  line-height: 50rpx;
  color: #999;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #d3d3d3;
}

.city-item-lighted {
  color: #333;
}

.light-user-avatar {
  width: 52rpx;
  height: 52rpx;
  margin-right: 32rpx;
  box-sizing: border-box;
  border-radius: 50%;
}

.light-user-avatar image {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
}

.province-item {
  width: 100%;
  height: 94rpx;
  font-size: 32rpx;
  color: #646464;
  display: flex;
  align-items: center;
}

.province-item>text {
  padding-left: 30rpx;
  vertical-align: middle;
}
.province-curr-item {
  color: #EE4C3B;
}
.province-curr-item>text {
  border-left: 6rpx solid #EE4C3B;
}